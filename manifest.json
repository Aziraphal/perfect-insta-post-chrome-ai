{
  "manifest_version": 3,
  "name": "Perfect Insta Post",
  "version": "2.4.0",
  "description": "Generate perfect Instagram posts from your photos with AI-powered captions and hashtags",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://perfect-insta-extension-production.up.railway.app/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Perfect Insta Post",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "minimum_chrome_version": "93"
}
